extends layout

block content
  h1 #{title}: #{bookinstance._id}
  hr

  if (bookinstance.status !== 'Available' && bookinstance.status !== 'Reserved')
    p.text-danger #[strong Book with status as &quot;Available&quot; or &quot;Reserved&quot; can be deleted.]
    
    div.row
      h3 Book
      
      dl
        dt
          a(href=bookinstance.book.url) #{bookinstance.book.title}
        dd #{bookinstance.book.summary}
        
      p.text-info Book status is #[strong #{bookinstance.status}]

  else
    p Do you really want to delete this bookinstance?
    
    form(method='POST', action='')
      div.form-group
        input#bookinstance_id.form-control(type='hidden', name='bookinstance_id'
          , required='true', value=bookinstance._id)
          
      button.btn.btn-warning(type='submit') Delete
